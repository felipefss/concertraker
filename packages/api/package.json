{
  "name": "api",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV='development' bun run --hot src/index.ts",
    "lint": "biome check",
    "neon:local": "docker compose -f src/db/docker-compose.yml --env-file .env up -d",
    "migration:gen": "drizzle-kit generate",
    "migration:apply": "drizzle-kit migrate",
    "dotenv:push": "bunx dotenv-vault@latest push",
    "build": "bun build src/index.ts --outfile ./dist/index.js --target node"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "drizzle-kit": "^0.31.4",
    "globals": "^16.4.0",
    "tsc-alias": "^1.8.16",
    "typescript-eslint": "^8.46.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@neondatabase/serverless": "1.0.1",
    "dotenv": "17.2.3",
    "drizzle-orm": "0.44.5",
    "express": "^5.2.1",
    "morgan": "^1.10.1",
    "postgres": "3.4.7",
    "winston": "^3.19.0"
  }
}