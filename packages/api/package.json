{
  "name": "api",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "lint": "biome check",
    "neon:local": "docker compose -f src/db/docker-compose.yml --env-file .env up -d",
    "migration:gen": "drizzle-kit generate",
    "migration:apply": "drizzle-kit migrate",
    "dotenv:push": "bunx dotenv-vault@latest push",
    "build": "bun build ./src/index.ts --target=bun --outdir ./dist && tsc-alias -o ./dist"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4",
    "globals": "^16.4.0",
    "tsc-alias": "^1.8.16",
    "typescript-eslint": "^8.46.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/clerk-auth": "^3.0.3",
    "@hono/zod-validator": "^0.7.4",
    "@neondatabase/serverless": "^1.0.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.7",
    "postgres": "^3.4.7"
  }
}